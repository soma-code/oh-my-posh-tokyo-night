{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "type": "prompt",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "#26C6DA",
          "background": "#546E7A",
          "template": " {{ if .WSL }}WSL at {{ end }}{{ .Icon }}",
          "options": {
            "linux": "\uF31b"
          }
        },
        {
          "type": "session",
          "style": "diamond",
          "foreground": "#f8f8f2",
          "background": "#6272a4",
          "leading_diamond": "\ue0b6",
          "template": "{{ if .SSHSession }}\ueba9 {{ end }}{{ .UserName }}@{{ .HostName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "foreground": "#f8f8f2",
          "background": "#a248cc",
          "powerline_symbol": "\ue0b0",
          "template": " {{ .Path }} ",
          "options": {
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#f8f8f2",
          "background": "#ffb86c",
          "powerline_symbol": "\ue0b0",
          "template": " \ue725 ({{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}) ",
          "options": {
            "branch_icon": "",
            "fetch_status": false,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "node",
          "style": "powerline",
          "foreground": "#f8f8f2",
          "background": "#8be9fd",
          "powerline_symbol": "\ue0b0",
          "template": " \ue718 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} "
        },
        {
          "type": "time",
          "style": "diamond",
          "foreground": "#f8f8f2",
          "background": "#ff757f",
          "trailing_diamond": "\ue0b0",
          "template": " \u2665 {{ .CurrentDate | date .Format }} ",
          "options": {
            "time_format": "15:04"
          }
        }
      ]
    },
    {
      "alignment": "left",
      "type": "rprompt",
      "segments": [
        {
          "type": "docker",
          "style": "powerline",
          "foreground": "#000000",
          "background": "#0B59E7",
          "powerline_symbol": "",
          "template": "  {{ .Context }} "
        }
      ]
    }
  ],
  "final_space": true,
  "version": 4
}
